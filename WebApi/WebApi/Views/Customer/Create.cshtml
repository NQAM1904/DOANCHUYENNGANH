@model WebApi.CUSTOMER

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container">
    <div class="form-horizontal">

        <h1>Thông tin cá nhân của bạn</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2">
                Tên khách hàng hoặc công ty cần tổ chức *
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NAMECUSTOM, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                Số Điện Thoại *
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PHONECUSTOM, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                Nơi tổ chức*
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ADDRESSCUSTOM, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                Email *
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.EMAILCUSTOM, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-11">
                <div class="text-right">
                    <button class="btn btn-outline-success btn-lg" type="submit">  <i class="fa fa-save"></i> Lưu Lại </button>
                </div>
            </div>
        </div>
    </div>
</div>
   

}

