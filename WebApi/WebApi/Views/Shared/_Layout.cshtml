<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
   
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">
                <img src="~/img/logo.svg" style="height: 1.5em; max-width: 100px;">
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                    aria-label="Toggle navigation"></button>
            <div class="dropdown">
                <button class="btn btn-ouline-white menu1" data-toggle="dropdown">Khách hàng</button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Khám phá</a>
                    <a class="dropdown-item" href="#">Tôi cần một công ty</a>
                </div>
            </div>
            <div class="dropdown">
                <button class="btn btn-ouline-white menu2" data-toggle="dropdown">Công ty</button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Giá cả</a>
                    <a class="dropdown-item" href="#">Sự kiện nổi bật</a>
                </div>
            </div>

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <a href="@Url.Action("SignUp","Login")" class="btn btn-ouline-white btn-0">Đăng nhập</a>
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <button class="btn btn-outline-primary btn-1" type="button"
                                onclick="window.location.href='login_agency.html';">
                            Nhà cung cấp
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-primary btn-2" type="button" data-toggle="modal" data-target="#myModal" data-url="@Url.Action("SignUp","Login")" id="Mybtn">
                            Tìm đối tác
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    @RenderBody()
    <!-- /.container -->

<div id="divModal">
    <div class="modal fade" id="Modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><img src="~/img/logo.svg" style="height: 1.5em; max-width: 100px;"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <div class="container layout-login">
                        <div class="signup">Đăng Ký</div>
                        <div class="login">Đăng nhập</div>
                        <form method="post" action="#">
                            <!--form sign-->
                            <div class="signup-form">
                                <input type="text" placeholder="Họ và Tên" name="hoten" class="input" id="hoten" @ViewData["Loi1"] />
                                <input type="text" placeholder="Tên Đăng Nhập" name="tendn" class="input" id="tendn" @ViewData["Loi2"]><br>
                                <input type="password" placeholder="Mật khẩu" name="matkhau" class="input" id="matkhau" @ViewData["Loi3"]><br>
                                <input class="btn btn-primary btn-signin" type="submit" value="Đăng ký">
                            </div>
                            <!--form login-->
                            <div class="login-form">
                                <input type="text" placeholder="Nhập tên đăng nhập" class="input"><br>
                                <input type="password" placeholder="Nhập mật khẩu" class="input"><br>
                                <input class="btn btn-primary btn-login" type="submit" value="Đăng Nhập">
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/modal_login.js"></script>
    <script src="~/Scripts/login-form.js"></script>
    <script src="~/Scripts/lien_he.js"></script>
    <script src="~/Scripts/carouse.js"></script>
</body>
</html>
