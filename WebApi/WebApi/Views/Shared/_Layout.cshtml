<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/img/logo-sl.png" rel="shortcut icon" type="image/x-icon" />
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/footer.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)

    @*<script src="~/Scripts/carouse.js"></script>*@
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">
                <img src="~/img/logo.svg" style="height: 1.5em; max-width: 100px;">
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                    aria-label="Toggle navigation"></button>
            <div class="dropdown">
                <button class="btn btn-ouline-white menu1" data-toggle="dropdown">Khách hàng</button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Khám phá</a>
                    <a class="dropdown-item" href="#">Tôi cần một công ty</a>
                </div>
            </div>
            <div class="dropdown">
                <button class="btn btn-ouline-white menu2" data-toggle="dropdown">Nhà cung cấp</button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Giá cả</a>
                    <a class="dropdown-item" href="#">Sự kiện nổi bật</a>
                </div>
            </div>

            @if (Session["TaiKhoan"] != null && ((USER)Session["TaiKhoan"]).IDROLE == 3)
            {
                var fullname = ((USER)Session["TaiKhoan"]).FULLNAME;

                <div class="dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        <span class="mr-2 d-none d-lg-inline text-gray-600 small"><b>@fullname</b></span>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Home/Logout">Đăng Xuất</a>
                    </div>
                </div>
            }
            else
            {
                <div class="collapse navbar-collapse" id="navbarResponsive">

                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item">
                            <button class="btn btn-outline-primary btn-1" type="button"
                                    onclick="window.location.href = '@Url.Action("SignUp","Login")';">
                                Nhà cung cấp
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="btn btn-primary btn-2" type="button" id="Mybtn">
                                Tìm đối tác
                            </button>
                        </li>
                    </ul>
                </div>
            }

        </div>
    </nav>

    <!-- Page Content -->
    @RenderBody()
    <!-- /.container -->

    <div class="modal fade" id="Modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><img src="~/img/logo.svg" style="height: 1.5em; max-width: 100px;"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="container layout-login">
                        <div class="login">Đăng nhập</div>
                        <div class="signup">Đăng Ký</div>
                        <!--form login-->

                        <div class="login-form">
                            <form method="post" action="/Home/DangNhap">
                                @if (!String.IsNullOrEmpty(ViewBag.Error))
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.Error
                                    </div>
                                }
                                <input type="text" placeholder="Nhập tên đăng nhập" name="USERNAME" class="input"><br>
                                <input type="password" placeholder="Nhập mật khẩu" name="PASSWORD" class="input"><br>
                                <input id="login" class="btn btn-primary btn-login" type="submit" value="Đăng Nhập">
                            </form>
                        </div>

                        <form method="post" action="/Home/DangKy">
                            <!--form sign-->
                            <div class="signup-form">
                                @if (!String.IsNullOrEmpty(ViewBag.Error))
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.Error
                                    </div>

                                }
                                <input type="text" placeholder="Họ và Tên" name="hoten" class="input" id="hoten" />
                                <input type="text" placeholder="Tên Đăng Nhập" name="tendn" class="input" id="tendn"><br>
                                <input type="password" placeholder="Mật khẩu" name="matkhau" class="input" id="matkhau"><br>
                                <input class="btn btn-primary btn-signin" type="submit" id="dangky" value="Đăng ký">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/Scripts/modal_login.js"></script>
<script src="~/Scripts/login-form.js"></script>
<script src="~/Scripts/lien_he.js"></script>