@model WebApi.AGENCY
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAgency.cshtml";
}
<script src="~/Scripts/ckeditor.js"></script>
<style>
    .custom-file-label {
        width: 1410px;
        margin-left: 16px;
    }

    .select {
        width: 1410px;
        margin-left: 16px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h1>Thông tin cơ bản của bạn</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    Tên Công ty *
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NAMEAGENCY, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    Số Điện Thoại *
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PHONEAGENCY, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                    </div>
                </div>

                <div class="form-group">
                    Địa Chỉ *
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ADDRESSAGENCY, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ADDRESSAGENCY, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Danh mục *
                    <select name="IDCATE" class="form-control select">

                        @using (DOANCHUYENNGANHEntities db = new DOANCHUYENNGANHEntities())
                        {
                            foreach (var item in db.CATEGORies.ToList())
                            {
                                <option value="@item.IDCATE">@item.NAMECATE</option>
                            }
                        }

                    </select>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    Email *
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EMAILAGENCY, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EMAILAGENCY, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Mô tả ngắn
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SUMARYAGENCY, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SUMARYAGENCY, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    Hoạt Động *
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.STATUS , new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger",})
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            Bài Giới Thiệu *
            <div class="col-md-11">
                @Html.TextAreaFor(model => model.DESCRIPTION, new { @class = "form-control", @id = "Description" })
                @Html.ValidationMessageFor(model => model.DESCRIPTION, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-11">
                <div class="text-right">
                    <button class="btn btn-success btn-lg" type="submit">  <i class="fa fa-save"></i> Lưu Lại </button>
                </div>
            </div>
        </div>
    </div>

}

<script type="text/javascript">
    $(document).ready(function () {
        CKEDITOR.replace('Description');
    })
</script>
