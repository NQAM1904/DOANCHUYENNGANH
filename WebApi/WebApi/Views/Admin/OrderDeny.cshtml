
@{
    ViewBag.Title = "OrderDeny";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
<h2>Đơn từ chối</h2>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped" id="myTable">
            <thead>
                <tr>
                   
                    <th scope="col">Khách hàng</th>
                    <th scope="col">Công ty</th>
                    <th scope="col">Ngày tạo</th>
                    <th scope="col">Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @using (DOANCHUYENNGANHEntities db = new DOANCHUYENNGANHEntities())
                {
                    int id = ViewBag.id = 5;
                    var idUser = ((USER)Session["TaiKhoan"]);
                    var custom = db.CUSTOMERs.Where(x => x.IDUSER == idUser.IDUSER);
                    foreach (var item in db.ORDERs.Where(x => x.STATUS == id).ToList())

                    {
                <tr>
                    <td>@item.CUSTOMER.NAMECUSTOM</td>
                    <td>@item.AGENCY.NAMEAGENCY</td>
                    <td>@item.CREATE_ORDER</td>
                    @if (item.STATUS == 5)
                    {
                        <td style="color:red;">YÊU CẦU BỊ TỪ CHỐI</td>
                    }

                    <th>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" href="/Admin/OrderInfo/@item.IDODER"><i class="fas fa-eye"></i></a>
                            <button type="button" class="btn btn-success" onclick="Restore(@item.IDODER)"><i class="fas fa-redo"></i></button>
                            <button type="button" class="btn btn-danger" onclick="Delete(@item.IDODER)"><i class="fas fa-trash-alt"></i></button>

                        </div>
                    </th>
                </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
    function Delete() {
        if (!confirm("Bạn có muốn xóa yêu cầu này không?")) return;
        $.ajax({
             url: '/Ajax/DeleteOrder/' + id,
            type: 'Delete',
            dataType: 'text'
        }).done(function (ketqua) {
            if (ketqua == "ok") {
                alert("Đã xóa yêu cầu");
                location.reload();
                return;
            }
            alert(ketqua);
        });
    }
</script>