@using WebApi.Controllers
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = (int)ViewBag.Id;
}
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<link href="~/Content/agency.css" rel="stylesheet" />

<div class="container_slider">
    <div class="content">
        <header class="s header layout-column layout-align-center-center md-padding bg lazy shaded longtail-page-header load">
            @{
                CategoryApiController api1 = new CategoryApiController();
                var cate = api1.Get().Where(x => x.IDCATE == id).FirstOrDefault();
                <h1 class="md-display-4">Công ty <strong>@cate.NAMECATE</strong> tốt nhất</h1>
                <p class="md-headline">
                    Công ty nào là tốt nhất cho bạn?
                </p>
            }
        </header>
    </div>
</div>
<!-- Page Content -->

<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3 text-center">
        Phân nhóm
        <small>các công ty</small>
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @{
                    CategoryApiController api = new CategoryApiController();
                    var item = api.Get().Where(x => x.IDCATE == id).FirstOrDefault();
                    <a href="/Home/Index">@item.NAMECATE</a>
                }
            </li>
            <li class="breadcrumb-item active">Các công ty</li>
        </ol>
    </nav>

</div>
<!--/container-->
<div class="container">
    <div class="layout-row layout-align-start-center"
         style="padding-left:1% !important;margin-bottom: 16px; justify-content: space-between;align-items: flex-end;">
        <div class="md-caption" style="width:30% !important; margin-right:3px">
            <div class="md-sortlist-theme" style="font-weight: bold;">
                Ngân Sách
            </div>
            <div style="margin-top: 8px">
                <md-input-container class="s-input-container s-fluid sl-no-error md-input-has-placeholder md-sortlist-theme">
                    <div class="md-resize-wrapper">
                        <i class="fa fa-usd" style="font-size: 16px;position: absolute;left: 10px;top: 7px;"></i>
                        <select id="exp-filter-budget"
                                class="s-select ng-pristine ng-valid md-input ng-empty ng-valid-required ng-touched s-select-optimize"
                                style="background: white;padding-left: 30px;-webkit-appearance:none; border-radius:0px !important">
                            <option value="any">Tất cả</option>
                            <option value="0">$1,000 - $3,000</option>,
                            <option value="1">$3,000 - $5,000</option>,
                            <option value="2">$5,000 - $10,000</option>,
                            <option value="3">$10,000 - $20,000</option>,
                            <option value="4">$20,000 - $40,000</option>
                        </select>
                    </div>
                </md-input-container>
            </div>
        </div>
        <div class="md-caption" style="width:30% !important; margin-right:3px">
            <div class="md-sortlist-theme" style="font-weight: bold;">
                Quy Mô
            </div>
            <div style="margin-top: 8px">
                <md-input-container class="s-input-container s-fluid sl-no-error md-input-has-placeholder md-sortlist-theme">
                    <div class="md-resize-wrapper">
                        <i class="fa fa-users" style="font-size: 16px;position: absolute;left: 10px;top: 9px;"></i>
                        <select id="exp-filter-size"
                                class="s-select ng-pristine ng-valid md-input ng-empty ng-valid-required ng-touched s-select-optimize"
                                style="background: white; padding-left: 30px;-webkit-appearance:none; border-radius:0px !important">
                            <option value="any">Tất cả</option>
                            <option value="0">Small studio (1-10 people)</option>,
                            <option value="1">Medium agency (11-30 people)</option>,
                            <option value="2">Big agency (31-100 people)</option>,
                            <option value="3">Group (101+ workers)</option>
                        </select>
                    </div>
                </md-input-container>
            </div>
        </div>
        <div class="md-caption" style="width:30% !important; margin-right:3px">
            <div class="md-sortlist-theme" style="font-weight: bold;">
                Dịch Vụ
            </div>
            <div style="margin-top: 8px">
                <md-input-container class="s-input-container s-fluid sl-no-error md-input-has-placeholder md-sortlist-theme">
                    <div class="md-resize-wrapper">
                        <i class="fa fa-suitcase" style="font-size: 16px;position: absolute;left: 10px;top: 9px;"></i>
                        <select id="exp-filter-industry"
                                class="s-select ng-pristine ng-valid md-input ng-empty ng-valid-required ng-touched s-select-optimize"
                                style="background: white;padding-left: 30px;-webkit-appearance:none; border-radius:0px !important">
