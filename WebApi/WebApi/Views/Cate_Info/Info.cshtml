                            <option value="0">Automotive</option>,
                            <option value="1">Beverage</option>,
                            <option value="2">Clothing &amp; Accessories</option>,
                            <option value="3">Consumer Electronics</option>,
                            <option value="4">Energy &amp; Oil</option>,
