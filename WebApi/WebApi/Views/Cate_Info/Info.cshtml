                            <option value="9">Household Products</option>,
                            <option value="10">Industrial Goods &amp; Services</option>,
                            <option value="11">Media</option>,
                            <option value="12">Military</option>,
                            <option value="13">Non-profit</option>,
                            <option value="14">Pharmaceuticals &amp; Biotech</option>,
                            <option value="15">Retail</option>,
                            <option value="16">Software &amp; Computer Services</option>,
                            <option value="17">Technology Hardware &amp; Equipment</option>,
                            <option value="18">Telecommunications</option>,
                            <option value="19">Tobacco</option>,
                            <option value="20">Toys</option>,
                            <option value="21">Travel &amp; Leisure</option>,
                            <option value="22">Utilities</option>,
                            <option value="23">Real Estate</option>,
                            <option value="24">Accounting</option>,
                            <option value="25">Architecture &amp; Planning</option>,
                            <option value="26">Art &amp; Handcraft</option>,
                            <option value="27">Aviation &amp; Aerospace</option>,
                            <option value="28">Construction</option>,
                            <option value="29">E-commerce</option>,
                            <option value="30">Education</option>,
                            <option value="31">Entertainment &amp; Events</option>,
                            <option value="32">Farming</option>,
                            <option value="33">Home Services</option>,
                            <option value="34">Human Resources</option>,
                            <option value="35">Insurance</option>,
                            <option value="36">Internet</option>,
                            <option value="37">Legal Services</option>,
                            <option value="38">Logistics &amp; Supply Chain</option>,
                            <option value="39">Luxury Goods &amp; Jewelry</option>,
                            <option value="40">Management Consulting</option>,
                            <option value="41">Marketing &amp; Advertising</option>,
                            <option value="42">Music</option>,
                            <option value="43">Office/Room/Space Renting</option>,
                            <option value="44">Pets</option>,
                            <option value="45">Political Organization</option>,
                            <option value="46">Restaurants</option>,
                            <option value="47">Sports</option>,
                            <option value="48">Storage</option>,
                            <option value="49">Transportation</option>,
                            <option value="50">Wine &amp; Spirits</option>,
                            <option value="51">Publishing</option>
                        </select>
                    </div>
                </md-input-container>
            </div>
        </div>
        <div class="md-caption">
            <a id="btn-md-caption" class="exp-createRequest md-truncate md-button profile md-sortlist-theme"
               style="color:white;margin-bottom: 0; background-color:#20c5e5; border-radius:unset">Tìm Kiếm</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @{
            foreach (var agency in api.Get(id).ToList())
            {

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">
                                <img src="~/img/agency/@agency.IMGAGENCies.FirstOrDefault().FILENAME" class="card-logo" />
                                <a href="/Agency_Info/Info/@agency.IDAGENCY" class="title-company">@agency.NAMEAGENCY</a>
                            </h5>
                        </div>
                        <img src="~/img/agency/@agency.IMGAGENCies.ElementAt(1).FILENAME" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">Đánh giá</h5>
                            <div class='rating-stars'>
                                <ul id='stars'>
                                    <li class='star' title='Poor' data-value='1'>
                                        <i class='fa fa-star fa-fw'></i>
                                    </li>
                                    <li class='star' title='Fair' data-value='2'>
                                        <i class='fa fa-star fa-fw'></i>
                                    </li>
                                    <li class='star' title='Good' data-value='3'>
                                        <i class='fa fa-star fa-fw'></i>
                                    </li>
                                    <li class='star' title='Excellent' data-value='4'>
                                        <i class='fa fa-star fa-fw'></i>
                                    </li>
                                    <li class='star' title='WOW!!!' data-value='5'>
                                        <i class='fa fa-star fa-fw'></i>
                                    </li>
                                </ul>
                            </div>
                            <h5 class="card-title">Tổ chức</h5>
                            <p class="card-text"><span class="data-api">10 sự kiện</span> đã đăng lên MPCE</p>
                            <h5 class="card-title">Quy mô</h5>
                            <p class="card-text"><span class="data-api">10 người</span> đã thực hiện</p>
                            <h5 class="card-title">Dịch vụ</h5>
                            <ul class="layout-row layout-wrap">
                                <li class="tag">Social Media</li>
                                <li class="tag">Advertising</li>
                                <li class="tag">Online Advertising</li>
                                <li class="tag">Media Planning</li>
                                <li class="tag">Web Application</li>
                                <li class="tag">Motion Design</li>
                            </ul>
                            <a href="/Agency_Info/Info/@ViewBag.Id" class="btn btn-outline-primary btn-sm btn-block">Xem chi tiết</a>
                            <a href="#" class="btn btn-outline-success btn-sm btn-block">Liên hệ</a>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>
<br>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/ratingstar.js"></script>
